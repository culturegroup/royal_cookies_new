{{ 'three-images-section.scss.css' | asset_url | stylesheet_tag }}

<section class="three-images-section">
    {% for block in section.blocks %}
        <div class="image-with-text image-with-text_first"
            style="background-image: url('{{ block.settings.image.src | img_url: 'master' }}');"
        >
            <div class="gradient">
                <p>{{ block.settings.text }}</p>
            </div>
        </div>
    {% endfor %}
</section>

{% schema %}
{
    "name": "Three images section",
    "settings": [
    ],
    "blocks": [
        {
            "type": "image",
            "name": "Image",
            "limit": 3,
            "settings": [
                {
                    "type": "richtext",
                    "id": "text",
                    "label": "Text"
                },
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Three images section"
        }
    ]
}
{% endschema %}