@font-face {
    font-family: 'Juana';
    src: url('{{ "juana-light.ttf" | asset_url }}') format('truetype');
    font-weight: normal;
    font-style: normal;
}
  
  @font-face {
    font-family: 'Helvetica Neue';
    src: url('{{ "HelveticaNeue.ttf" | asset_url }}') format('truetype');
    font-weight: normal;
    font-style: normal;
}

.section-header{
    text-align: center;
    p {
      margin: 0;
      line-height: 58px;
      color: #212328;
      font-family: 'Juana';
      font-weight: 400;
      font-size: 50px;
    }
  }
  
  .underline{
    text-decoration: underline;
  }
  
  .top-bar{
    background: transparent;
  }
  
  @media(max-width: 992px){
  
    .section1, .section2, .section3, .section4{
        padding: 0 15px;
    }
  
    .section-header{
        p{
          font-size: 36px;
          line-height: 38px;
        }
    }
  }
  
  @media screen and (min-width: 768px) {
    .mobile{
      display: none !important;
    }
  }
  
  @media screen and (max-width: 767px) {
    .desktop{
      display: none !important;
    }
  }
  

.header-wrapper{
  position: absolute;
  right: 0;
  left: 0;
  background: transparent;

  .icon-hamburger path{
    fill: white;
  }

  .icon-close path{
    fill: white;
  }
}