@font-face {
    font-family: 'Juana';
    src: url('{{ "juana-light.ttf" | asset_url }}') format('truetype');
    font-weight: normal;
    font-style: normal;
}
  
  @font-face {
    font-family: 'Helvetica Neue';
    src: url('{{ "HelveticaNeue.ttf" | asset_url }}') format('truetype');
    font-weight: normal;
    font-style: normal;
}

.section-header{
    text-align: center;
    p {
      margin: 0;
      line-height: 58px;
      color: #212328;
      font-family: 'Juana';
      font-weight: 400;
      font-size: 50px;
    }
  }
  
  .underline{
    text-decoration: underline;
  }
  
  .top-bar{
    background: transparent;
  }
  
  @media(max-width: 992px){
  
    .section1, .section2, .section3, .section4{
        padding: 0 15px;
    }
  
    .section-header{
        p{
          font-size: 36px;
          line-height: 38px;
        }
    }
  }
  
  @media screen and (min-width: 768px) {
    .mobile{
      display: none !important;
    }
  }
  
  @media screen and (max-width: 767px) {
    .desktop{
      display: none !important;
    }
  }


.sticky-add-to-cart{
    position: sticky;
    position: -webkit-sticky;
    position: -moz-sticky;
    position: -ms-sticky;
    position: -o-sticky;
    bottom: 0;
    z-index: 1000;
    background: #FF9900;
    color: #fff;
    padding: 20px;
    font-family: HelveticaNeue;
    font-style: normal;
    font-weight: 500;
    font-size: 16px;
    line-height: 17px;
    border: none;
    display: none;

    @media screen and (min-width: 768px) {
      display: none !important;
    }
}

.quick-add__submit{
  background: #FF9900;
  color: #fff;
  border: none;
  margin-bottom: 10px;

  &:hover{
    border: none;
  }
}

.shopify-payment-button__button{
  .shopify-cleanslate{
    div{
      border-color: unset !important;
      background: #FF9900 !important;
    }
  }
}