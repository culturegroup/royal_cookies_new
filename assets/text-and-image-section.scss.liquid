.text-and-image-section{
    
    display: flex;
    max-width: 1192px;
    padding: 0 30px;
    margin: 0 auto;
    align-items: center;
    justify-content: space-between;

    .text-block{
        flex: 1 1 0px;
        color: #000000;
        padding:  0 20px;

        .text-block__header{
            margin: 0;

            p {
                text-transform: uppercase;
                font-family: 'Juana';
                font-weight: 300;
                font-size: 65px;
                line-height: 70px;
                margin: 0;
                margin-left: 18px;
            }
        }

        .text-block__before-header-img{
            margin-bottom: -135px;
        }

        .text-block__paragraph{
            font-family: 'HelveticaNeue';
            font-weight: 300;
            font-size: 14px;
            line-height: 22px;
            color: #4F4F4F;
            margin-top: 32px;
        }

        .text-block__list{
            margin: 0;
            font-family: 'HelveticaNeue';
            font-weight: 700;
            font-size: 14px;
            line-height: 18px;
            display: flex;
            align-items: start;
            flex-direction: column;

            p{
                display: flex;
                align-items: center;
                margin-left: -37px;
            }

            p::before{
                content: url("{{'blue-check.svg' | asset_url}}");
                margin-right: 16px;
            }
        }

        .text-block__ready{
            display: inline;
            font-family: 'HelveticaNeue';
            font-weight: 700;
            font-size: 16px;
            line-height: 24px;
            text-transform: uppercase;
            background-color: #6088BA;
            margin-top: 24px;
            color: #FFFFFF;
            padding: 0 5px;
        }
    }

    .text-and-image-section__img-block{
        flex: 1 1 0px;
        display: flex;
        align-items: center;
        justify-content: center;

        img{
            display: block;
        }

        .small-img{
            border-radius: 127px 0 78px 0;
            width: 30%;
            height: auto;
            margin-right: 8px;
        }

        .big-img{
            border-radius: 190px 190px 0 0;
            width: 60%;
            height: auto;
        }

        .logo-img{
            width: 141px;
            margin-left: -75px;
        }

    }
}

@media (max-width: 1200px){

    .text-and-image-section{
        justify-content: center;
        overflow: hidden;

        .small-img{
            border-radius: 88px 0 54px 0 !important;
        }

        .big-img{
            border-radius: 147px 147px 0 0 !important;
        }

        .logo-img{
            width: 110px !important;
            margin-left: -59px !important;
        }

    }

}

@media (max-width: 992px) {

    .text-and-image-section{
        flex-direction: column;

        .text-block{

            .text-block__before-header-img{
                height: 76px;
                margin-bottom: -78px;
            }
    
            .text-block__header{

                p {
                    font-size: 36px;
                    line-height: 38px;
                }
            }

        }

        .text-and-image-section__img-block{

            .small-img{
                border-radius: 59px 0 37px 0 !important;
            }
    
            .big-img{
                border-radius: 100px 100px 0 0 !important;
            }
    
            .logo-img{
                width: 75px !important;
                margin-left: -40px !important;
            }

        }

    }

}