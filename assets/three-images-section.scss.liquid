.three-images-section{
    padding: 60px 0 30px 0;
    display: flex;
    justify-content: center;

    .image-with-text{
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        height: 554px;
        width: 392px;
        margin-right: 8px;
        display: flex;
        color: #FFFFFF;
        font-family: 'Juana';
        font-style: normal;
        font-weight: 300;
        font-size: 38px;
        line-height: 40px;

        .gradient{
            padding: 32px;
            top: 0;
            left: 0;
            height: 100%;
            width: 100%;
            background: linear-gradient(180deg, rgba(0, 0, 0, 0.7) 0%, rgba(0, 0, 0, 0) 100%);
        }

        .gradient_reverse{
            transform: rotate(-180deg);

            p{
                transform: rotate(-180deg);
            }
        }

        &:nth-child(2n){
            .gradient{
                display: flex;
                align-items: flex-end;
            }
        }
    }
}

@media (max-width: 1200px){

    .three-images-section{

        .image-with-text_first{
            margin-left: 8px;
        }

    }

}

@media (max-width: 992px){

    .three-images-section{
        flex-direction: column;
        padding: 0 15px;
        margin: 20px auto;

        .image-with-text{
            width: 100%;
            font-size: 26px;
            line-height: 34px;
            max-width: 392px;
            margin: 0 auto 10px;
            background-repeat: no-repeat;
        }
    }

}